<dialog id="edit-modal" class="modal-fixed rounded-3xl p-0 border-2 border-brand shadow-2xl w-full max-w-md outline-none overflow-hidden">
    <div class="bg-white">
        <div class="flex justify-between items-center p-6 bg-brand-light/30 border-b border-brand-light">
            <div class="flex items-center gap-3">
                <div class="p-2 bg-brand rounded-lg text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                </div>
                <h3 class="text-xl font-black text-brand-deep tracking-tight uppercase">Editar Cliente</h3>
            </div>
            <button onclick="this.closest('dialog').close()" class="text-brand-dark/40 hover:text-brand transition-all text-xl">âœ•</button>
        </div>

        <div class="p-8">
            <form id="edit-form" method="dialog" class="space-y-5">
                <input type="hidden" name="id" id="m-id" />
                
                <div>
                    <label class="block text-[10px] font-black text-brand uppercase mb-2 ml-1">Nombre Comercial</label>
                    <input 
                        type="text" 
                        name="nombre" 
                        id="m-nombre" 
                        class="w-full p-4 bg-brand/5 border-2 border-brand/10 rounded-2xl outline-none focus:border-brand transition-all font-bold text-brand-deep" 
                        required 
                    />
                </div>

                <div>
                    <label class="block text-[10px] font-black text-brand uppercase mb-2 ml-1">Observaciones</label>
                    <textarea 
                        name="observaciones" 
                        id="m-obs" 
                        class="w-full p-4 bg-brand/5 border-2 border-brand/10 rounded-2xl outline-none focus:border-brand transition-all h-28 resize-none text-sm text-brand-dark"
                    ></textarea>
                </div>

                <div class="flex gap-3 pt-2">
                    <button type="button" onclick="this.closest('dialog').close()" class="flex-1 py-4 text-brand-dark/50 font-bold hover:bg-gray-100 rounded-2xl transition-all uppercase text-xs">
                        Descartar
                    </button>
                    <button type="submit" class="flex-1 py-4 bg-brand text-white rounded-2xl font-black hover:bg-brand-deep transition-all shadow-lg shadow-brand/20 uppercase text-xs">
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</dialog>