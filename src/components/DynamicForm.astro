---
interface Field {
    name: string;
    label: string;
    type: 'text' | 'number' | 'date' | 'datalist';
    placeholder?: string;
    datalist?: string[];
    readonly?: boolean;
    required?: boolean;
    value?: string;
}

interface Props {
    title: string;
    subtitle: string;
    fields: Field[];
    actionName: string;
    buttonText: string;
    relationalData?: any;
}

const { title, subtitle, fields, actionName, buttonText, relationalData } = Astro.props;
---

<section class="bg-white border border-slate-200 rounded-[2.5rem] shadow-sm overflow-hidden mb-10 group transition-all">
    <div class="p-6 border-b border-slate-100 bg-slate-50/50 flex items-center justify-between">
        <div class="flex items-center gap-3">
            <div class="w-2 h-2 rounded-full bg-green-600 animate-pulse"></div>
            <div>
                <h3 class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-500 leading-none">{title}</h3>
                <p class="text-[9px] font-bold text-slate-400 uppercase tracking-widest mt-1.5">{subtitle}</p>
            </div>
        </div>
    </div>

    <div class="p-8">
        <form 
            id="dynamic-form" 
            data-action={actionName} 
            data-relational={JSON.stringify(relationalData)}
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 xl:grid-cols-5 gap-6 items-end"
        >
            {fields.map((field) => (
                <div class={field.name === 'clienteObservaciones' ? 'lg:col-span-2' : ''}>
                    <label class="block text-[9px] uppercase font-black text-slate-400 tracking-[0.15em] mb-2.5 ml-1">
                        {field.label}
                    </label>
                    
                    <div class="relative group/input">
                        <input
                            type={field.type === 'datalist' ? 'text' : (field.name === 'fecha' ? 'text' : field.type)}
                            list={field.type === 'datalist' ? `list-${field.name}` : undefined}
                            name={field.name}
                            id={`input-${field.name}`}
                            value={field.value || ''}
                            placeholder={field.name === 'fecha' ? 'DD/MM' : field.placeholder}
                            step={(field.name === 'cantidad' || field.name === 'importe') ? '0.01' : undefined}
                            readonly={field.readonly}
                            maxlength={field.name === 'fecha' ? 5 : undefined}
                            class={`w-full border-2 rounded-2xl px-5 py-3.5 text-sm font-bold outline-none transition-all
                                ${field.readonly 
                                    ? 'bg-slate-100 text-slate-400 border-transparent cursor-not-allowed' 
                                    : 'bg-slate-50 border-slate-100 text-slate-600 focus:border-green-600/40 focus:bg-white focus:ring-4 focus:ring-green-600/5'}`}
                            required={field.required !== false}
                        />
                        {field.type === 'datalist' && (
                            <datalist id={`list-${field.name}`}>
                                {field.datalist?.map(opt => <option value={opt} />)}
                            </datalist>
                        )}
                        <div class="absolute left-0 top-3 bottom-3 w-1 bg-green-600 rounded-r-full scale-y-0 group-focus-within/input:scale-y-100 transition-transform duration-300"></div>
                    </div>
                </div>
            ))}

            <div class="lg:col-span-1">
                <button type="submit" class="w-full bg-green-600 text-white font-black px-8 py-4 rounded-2xl hover:bg-green-700 active:scale-95 transition-all shadow-lg shadow-green-600/20 uppercase text-[10px] tracking-[0.2em] flex items-center justify-center gap-3 group/btn">
                    <span>{buttonText}</span>
                    <div class="w-5 h-5 bg-white/20 rounded-lg flex items-center justify-center text-base group-hover/btn:rotate-90 transition-transform">+</div>
                </button>
            </div>
        </form>
    </div>
</section>

<script>
    import { actions } from 'astro:actions';

    function initForm() {
        const form = document.getElementById('dynamic-form') as HTMLFormElement;
        if (!form) return;

        const relationalData = JSON.parse(form.dataset.relational || '[]');
        
        // LÓGICA DE FECHA (DD/MM)
        const inputFecha = form.querySelector('#input-fecha') as HTMLInputElement;
        if (inputFecha) {
            inputFecha.addEventListener('input', (e) => {
                let v = inputFecha.value.replace(/\D/g, '');
                if (v.length > 2) v = v.substring(0, 2) + '/' + v.substring(2, 4);
                inputFecha.value = v;
            });
        }

        // LÓGICA RELACIONAL (Cliente -> Matrícula)
        const inputCliente = form.querySelector('#input-clienteNombre') as HTMLInputElement;
        const inputObs = form.querySelector('#input-clienteObservaciones') as HTMLInputElement;
        const inputMatricula = form.querySelector('#input-matriculaNumero') as HTMLInputElement;
        const listMatricula = form.querySelector('#list-matriculaNumero') as HTMLElement;

        if (inputCliente) {
            inputCliente.addEventListener('input', () => {
                const selection = relationalData.find(r => r.nombre === inputCliente.value);
                if (selection) {
                    if (inputObs) inputObs.value = selection.observaciones;
                    if (listMatricula) {
                        listMatricula.innerHTML = selection.matriculas.map(m => `<option value="${m}">`).join('');
                    }
                } else {
                    if (inputObs) inputObs.value = '';
                    if (listMatricula) listMatricula.innerHTML = '';
                }
            });
        }

        form.onsubmit = async (e) => {
            e.preventDefault();
            const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
            submitBtn.disabled = true;
            submitBtn.classList.add('opacity-50', 'cursor-not-allowed');

            const formData = new FormData(form);

            const fechaTxt = formData.get('fecha') as string;
            if (fechaTxt && fechaTxt.includes('/')) {
                const [d, m] = fechaTxt.split('/');
                const y = new Date().getFullYear();
                formData.set('fecha', `${y}-${m}-${d}`);
            }

            const action = form.dataset.action;
            const { error } = await actions[action](formData);
            
            if (!error) {
                window.location.reload();
            } else {
                alert("Error: " + error.message);
                submitBtn.disabled = false;
                submitBtn.classList.remove('opacity-50', 'cursor-not-allowed');
            }
        };
    }

    document.addEventListener('astro:page-load', initForm);
</script>