---
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';
import logoAsset from '../assets/icon.svg';
const { title } = Astro.props;
const pathname = new URL(Astro.url).pathname;

// Mapeamos los nombres a emojis
const menuItems = [
